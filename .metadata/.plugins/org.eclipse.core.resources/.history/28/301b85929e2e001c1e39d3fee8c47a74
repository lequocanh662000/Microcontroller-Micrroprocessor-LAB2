 int hour = 15, min = 8, sec = 50;

 int clocktimer_counter = 0;
 int clocktimer_flag = 0;
 int TIMER_CYCLE = 10;

 void setClockTimer(int duration){
 	clocktimer_counter = duration / TIMER_CYCLE;
 	clocktimer_flag = 0;
 }

 void clock_timer_run(){
 	if(clocktimer_counter == 0)timer0_flag = 1;
 	clocktimer_counter--;
 }
void fsm_7_segmnent_led_clock_display(void){
	if(clocktimer_flag == 1){
	  	if(index == 0){
	  		sec++;
		    if(sec >= 60){
		      sec = 0;
		      min++;
		    }if(min >= 60){
		      min = 0;
		      hour++;
		    }if(hour >= 24){
		      hour = 0;
		    }
	  		 updateClockBuffer(hour, min);
	  	  }
	  	setClockTimer(1000);
	}

	seven_segment_led_driver();
}
